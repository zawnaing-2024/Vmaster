policy filter_username {
    if (!User-Name) {
        reject
    }
    
    if (User-Name =~ / /) {
        reject
    }
    
    if (User-Name =~ /@.*@/ ) {
        reject
    }
    
    if (User-Name =~ /\\.\\./ ) {
        reject
    }
    
    if (User-Name =~ /\\.$/)  {
        reject
    }
    
    if (User-Name =~ /@\\./)  {
        reject
    }
}
