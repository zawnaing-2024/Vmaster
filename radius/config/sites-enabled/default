server default {
    listen {
        type = auth
        ipaddr = *
        port = 1812
        limit {
            max_connections = 16
            lifetime = 0
            idle_timeout = 30
        }
    }

    listen {
        type = acct
        ipaddr = *
        port = 1813
        limit {
        }
    }

    authorize {
        filter_username
        preprocess
        sql
        pap
    }

    authenticate {
        Auth-Type PAP {
            pap
        }
    }

    preacct {
        preprocess
        acct_unique
        suffix
    }

    accounting {
        sql
    }

    post-auth {
        sql
        Post-Auth-Type REJECT {
            sql
        }
    }
}
